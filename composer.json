{
  "config": {
    "preferred-install": "dist",
    "platform": {
      "php": "7.1.3"
    },
    "optimize-autoloader": true,
    "prepend-autoloader": false,
    "platform-check": false
  },
  "autoload": {
    "psr-4": {
      "PrestaShop\\Module\\PsEventbus\\": "src/"
    },
    "classmap": [
      "ps_eventbus.php",
      "controllers/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "PrestaShop\\Module\\PsEventbus\\Tests\\": "tests/"
    },
    "classmap": [
      "src/"
    ]
  },
  "require": {
    "php": ">=7.1.3",
    "phpseclib/phpseclib": "^2.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "~5.0",
    "monolog/monolog": "1.25.3",
    "prestashop/module-lib-service-container": "^1.2",
    "prestashop/prestashop-accounts-installer": "^1.0.0",
    "sentry/sentry": "^1.11.0",
    "vlucas/phpdotenv": "3.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5.20",
    "prestashop/php-dev-tools": "3.*",
    "friendsofphp/php-cs-fixer": "^2.16",
    "allure-framework/allure-phpunit": "^v1.5.0",
    "phpunit/php-code-coverage": "^6.1.4"
  }
}
