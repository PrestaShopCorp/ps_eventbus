<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        beStrictAboutChangesToGlobalState="true"
        beStrictAboutOutputDuringTests="true"
        beStrictAboutResourceUsageDuringSmallTests="true"
        cacheResultFile="./code-coverage-rapport/.phpunit.result.cache"
        colors="true"
        executionOrder="random"
        xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
        <!-- delete :  bootstrap="bootstrap.php" from balise phpunit (probably not use because configuration is here) -->
  <extensions>
    <extension class="PrestaShop\Module\PsEventbus\Tests\Extensions\Boot"/>
  </extensions>
  <php>
    <ini name="error_reporting" value="-1" />
    <ini name="xdebug.mode" value="coverage" />
    <env name="XDEBUG_MODE" value="coverage" />
  </php>
  <testsuites>
    <testsuite name="Ps eventbus Tests">
      <directory>./unit</directory>
    </testsuite>
  </testsuites>
  <listeners>
    <listener class="Yandex\Allure\PhpUnit\AllurePhpUnit" file="../vendor/allure-framework/allure-phpunit/src/Yandex/Allure/PhpUnit/AllurePhpUnit.php">
      <arguments>
        <string>./tests/code-coverage-rapport/allure-results</string>
        <boolean>true</boolean>
      </arguments>
    </listener>
  </listeners>
  <filter>
    <whitelist>
      <directory suffix=".php">../src</directory>
      <directory suffix=".php">../controllers</directory>
    </whitelist>
  </filter>
</phpunit>
