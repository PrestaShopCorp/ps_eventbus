# Variables for MySQL
# See https://hub.docker.com/_/mariadb
MYSQL_HOST=mysql
MYSQL_USER=prestashop
MYSQL_PASSWORD=prestashop
MYSQL_ROOT_PASSWORD=prestashop
MYSQL_PORT=3306
MYSQL_DATABASE=prestashop
MYSQL_TIMEZONE=Europe/Paris

# Variables for Prestashop
# See https://hub.docker.com/r/prestashop/prestashop
DB_SERVER=mysql         # see MYSQL_HOST
DB_NAME=prestashop      # see MYSQL_DATABASE
DB_USER=prestashop      # see MYSQL_USER
DB_PASSWD=prestashop    # see $MYSQL_PASSWORD
DB_PORT=3306            # see $MYSQL_PORT
PS_DEMO_MODE=0
PS_DOMAIN=replace.me.ngrok.io # will be replaced by tweak script
PS_INSTALL_AUTO=1
PS_ERASE_DB=1
PS_INSTALL_DB=1
PS_ENABLE_SSL=1
PS_FOLDER_INSTALL=install
PS_FOLDER_ADMIN=ps-admin
ADMIN_MAIL=admin@prestashop.com
ADMIN_PASSWD=prestashop

# Variables for phpMyAdmin
# See https://hub.docker.com/_/phpmyadmin
PMA_HOST=mysql                  # see MYSQL_HOST
PMA_PORT=3306                   # see $MYSQL_PORT
PMA_USER=prestashop             # see MYSQL_USER
PMA_PASSWORD=prestashop         # see $MYSQL_PASSWORD
MYSQL_ROOT_PASSWORD=prestashop  # see $MYSQL_ROOT_PASSWORD
