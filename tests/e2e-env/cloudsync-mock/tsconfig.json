{
  "compilerOptions": {
    "target": "es2021",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "incremental": false,
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/"]
}