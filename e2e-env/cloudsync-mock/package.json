{
  "name": "cloudsync-mock",
  "version": "0.0.0",
  "main": "dist/app.js",
  "private": true,
  "engines": {
    "yarn": "please use pnpm",
    "npm": "please use pnpm",
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "start": "node dist/app.js",
    "start:dev": "nodemon",
    "build": "npx swc ./src -d ./dist && pnpm fix-esm-js-ext",
    "fix-esm-js-ext": "find ./dist -type f -name '*.js' -exec sed -i -E 's/import (.+) from (\\x22|\\x27)\\.(.+)\\/([a-zA-Z0-9_-]+)(\\.ts|\\.js)?(\\x22|\\x27)/import \\1 from \"\\3\\/\\4.js\"/g' {} \\;",
    "clean": "rimraf ./dist",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --check ./src/**/*",
    "format:fix": "prettier --write ./src/**/*",
    "fix": "pnpm format:fix && pnpm lint:fix"
  },
  "dependencies": {
    "@types/ws": "^8.5.10",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "ws": "^8.15.1"
  }
}
